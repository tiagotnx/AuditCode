{
    // Configurações de codificação
    "files.encoding": "utf8",
    "files.autoGuessEncoding": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    // Configurações de editor
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },
    // Configurações para HTML
    "html.format.indentInnerHtml": true,
    "html.format.enable": true,
    "html.suggest.html5": true,
    // Configurações para CSS
    "css.validate": true,
    "css.lint.duplicateProperties": "warning",
    "css.lint.emptyRules": "warning",
    "css.lint.unknownProperties": "warning",
    // Configurações para JavaScript
    "javascript.validate.enable": true,
    "javascript.format.enable": true,
    "javascript.suggest.enabled": true,
    // Configurações de Live Server (se instalado)
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.port": 5500,
    "liveServer.settings.root": "/",
    // Configurações de arquivos
    "files.associations": {
        "*.html": "html",
        "*.css": "css",
        "*.js": "javascript"
    },
    // Configurações de busca
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.git": true
    },
    // Configurações de auto salvamento
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    // Configurações de Terminal - PowerShell como padrão
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        }
    },
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.fontFamily": "Cascadia Code, Consolas, 'Courier New', monospace"
}
